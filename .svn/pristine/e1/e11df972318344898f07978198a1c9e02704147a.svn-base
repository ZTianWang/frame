<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="pg" uri="http://jsptags.com/tags/navigation/pager" %>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<span >
<pg:pager export="curPage=pageNumber"  
	items="${param.total}"
	maxPageItems="<%=com.frame.utils.SystemContext.getPageSize() %>"
	url="${param.url }"
	>
	
	
	<c:forEach items="${queryParams}" var="query">
		<pg:param name="${query.name}" value="${query.value}"/>
	</c:forEach>
	<pg:first>
		<a href="${pageUrl }" >首页</a>
	</pg:first>
	<pg:prev>
		<a href="${pageUrl }" >上一页</a>
	</pg:prev>
	<pg:pages>
		<c:if test="${curPage eq pageNumber }">
			[${pageNumber }]
		</c:if>
		<c:if test="${curPage != pageNumber }">
			<a href="${pageUrl }" >${pageNumber }</a>
		</c:if>
	</pg:pages>
	<pg:next>
		<a href="${pageUrl }" >下一页</a>
	</pg:next>
	<pg:last>
		<a href="${pageUrl }" >尾页</a>
	</pg:last>

	<pg:last>
		共&nbsp;${pageNumber }&nbsp;页&nbsp;${param.total}&nbsp;条记录
	</pg:last>
	</pg:pager>
</span>